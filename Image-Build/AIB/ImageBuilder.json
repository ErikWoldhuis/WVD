{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },

    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "<imgBuilderId>": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 180,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D1_v2",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "Windows-10",
                    "sku": "20H2-EVD",
                    "version": "latest"
                
            },
            "customize": [
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                        ],
                        "updateLimit": 40
                    },
                    {
                        "type": "PowerShell",
                        "name": "CreateBuildPath",
                        "inline": "New-Item -path c:\\buildArtifacts -ItemType Directory -Force"
                    },
                    {
                        "type": "File",
                        "name": "downloadRepo",
                        "sourceUri": "https://github.com/shawntmeyer/WVD/archive/master.zip",
                        "destination": "c:\\buildArtifacts\\WVD-master.zip"
                    },
                    {
                        "type": "PowerShell",
                        "name": "ExpandRepo",
                        "inline": "Expand-Archive -Path c:\\buildartifacts\\WVD-master.zip -destinationpath c:\\buildartifacts -force"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Prepare-WVDImage",
                        "scriptUri": "c:\\buildartifacts\\WVD-master\\Image-Build\\Customizations\\Prepare-WVDImage.ps1"
                    },                         
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                        ],
                        "updateLimit": 40
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM  > c:\\buildArtifacts\\azureImageBuilderRestart.txt",
                        "restartTimeout": "5m"
                    }
            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                    "runOutputName": "<runOutputName>",
                    "artifactTags": {
                        "source": "azureVmImageBuilder",
                        "baseosimg": "windows10MS"
                    },
                    "replicationRegions": [
                      "<region1>",
                      "<region2>"
                    ]
                }
            ]
            }
        }    
    ]
}    
